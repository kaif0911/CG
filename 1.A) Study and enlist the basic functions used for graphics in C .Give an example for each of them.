#include<iostream.h>
#include<conio.h>
#include<graphics.h>
int main()
{
int gd=DETECT,gm;
initgraph(&gd,&gm,"C:\\TURBOC3\\BGI");
cout<<"Line:";
line(50,50,100,50);
getch();
cleardevice();
// Rectangle
initgraph(&gd,&gm,"C:\\TURBOC3\\BGI");
cout<<"Rectangle";
rectangle(50,50,200,250);
getch();
cleardevice();
//Arc
initgraph(&gd,&gm,"C:TURBOC3\\BGI");
cout<<"Arc";
arc(100,100,0,135,50);
getch();
cleardevice();
//circle 
int x,y,r;
initgraph(&gd,&gm,"C:\\TURBOC3\\BGI");
cout<<"Enter coordinate of x and y:";
cin>>x>>y;
cout<<"Enter Radius of circle:";
cin>>r;
setcolor(RED);
circle(x,y,r);
circle(x+x/2,y+y/2,r);
getch();
closegraph();
return 0;
}
